{
  "key": "consumables_total",
  "name": "Total Consumables Cost",
  "description": "Totals consumables cost over a configurable period",
  "filename": "Consumables_Total",
  "periods": [
    {"label": "Last 7 days", "months": 0, "days": 7},
    {"label": "Last month", "months": 1},
    {"label": "Last 6 months", "months": 6},
    {"label": "Last 12 months", "months": 12},
    {"label": "All time", "months": null}
  ],
  "defaultPeriodIndex": 3,
  "outputs": [
    {"mode": "screen"},
    {"mode": "file", "fileType": "xlsx"},
    {"mode": "file", "fileType": "pdf"}
  ],
  "dataSources": {
    "consumables": {
      "entity": "Consumable"
    }
  },
  "calculations": {
    "consumablesTotal": { "source": "consumables", "field": "cost", "operation": "sum" }
  },
  "sheets": [
    {
      "name": "Consumables",
      "source": "consumables",
      "columns": [
        {"key": "date", "label": "Date", "width": 12},
        {"key": "vehicle", "label": "Vehicle", "width": 20},
        {"key": "item", "label": "Item", "width": 30},
        {"key": "cost", "label": "Cost", "width": 12, "format": "currency", "aggregate": "sum"}
      ]
    }
  ]
}
