      "columns": [
        {"key":"date","label":"Date","width":12},
        {"key":"vehicle","label":"Vehicle","width":20},
        {"key":"litres","label":"Litres","width":10},
        {"key":"cost","label":"Cost","width":12,"format":"currency","aggregate":"sum"}
      ]
    }
  ]
